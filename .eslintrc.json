{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "globals": {
    "Alpine": "readonly",
    "bootstrap": "readonly",
    "L": "readonly",
    "gtag": "readonly",
    "showToast": "readonly",
    "loadComponent": "readonly"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "semi": ["error", "never"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "space-before-function-paren": ["error", "always"],
    "comma-dangle": ["error", "never"]
  }
}
